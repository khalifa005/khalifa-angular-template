{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    // "baseUrl": ".",
    // "paths": {
    //   // "@env": ["src/environments/environment"],
    //   // "@shared/*": ["src/app/shared/*"],
    //   // "@core/*": ["src/app/core/*"],
    //   // "@pages/*":["src/app/pages/*"]
